<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receipt"
    android:layout_width="500px"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/receipt_view"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receipt_h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_heavy"
                android:gravity="center"
                android:text="Thanks for using"
                android:textAlignment="center"
                android:textSize="36px" />

            <TextView
                android:id="@+id/receipt_h2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_heavy"
                android:gravity="center"
                android:text="BUCKET"
                android:textAlignment="center"
                android:textSize="36px" />

            <TextView
                android:id="@+id/receipt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:text="date"
                android:textAlignment="center"
                android:textSize="36px" />

            <TextView
                android:id="@+id/receipt_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:fontFamily="@font/avenir_heavy"
                android:gravity="center"
                android:text="store name"
                android:textAlignment="center"
                android:textSize="48px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receipt_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:text="store name"
                android:textAlignment="center"
                android:textSize="36px" />

            <TextView
                android:id="@+id/receipt_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:text="store name"
                android:textAlignment="center"
                android:textSize="36px" />

            <TextView
                android:id="@+id/receipt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/avenir_medium"
                android:gravity="center"
                android:text="store name"
                android:textAlignment="center"
                android:textSize="36px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receipt_m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/avenir_medium"
                    android:text="Total:"
                    android:textAlignment="gravity"
                    android:textSize="36px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receipt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="end"
                    android:text="$20.20"
                    android:textAlignment="gravity"
                    android:textSize="36px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receipt_m2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:text="Cash Tendered:"
                    android:textAlignment="gravity"
                    android:textSize="36px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receipt_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="end"
                    android:text="$20.20"
                    android:textAlignment="gravity"
                    android:textSize="36px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receipt_m3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:text="Change:"
                    android:textAlignment="center"
                    android:textSize="36px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receipt_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="end"
                    android:text="$20.20"
                    android:textAlignment="gravity"
                    android:textSize="36px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/receipt_m4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="end"
                    android:text="Bucketed Total:"
                    android:textAlignment="gravity"
                    android:textSize="36px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/receipt_bucket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="end"
                    android:text="$20.20"
                    android:textAlignment="gravity"

                    android:textSize="36px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/qr_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/receipt_m5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:text="To redeem your bucket total, use the website link and code below or scan this QR code"
                    android:textAlignment="center"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/receipt_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:text="www.bucketthechange.com"
                    android:textAlignment="center"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/receipt_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_medium"
                    android:gravity="center"
                    android:text="XXX-XXXX-XXX"
                    android:textAlignment="center"
                    android:textSize="36px"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/receipt_qr_code"
                    android:layout_width="450px"
                    android:layout_height="450px"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/receipt_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_heavy"
                    android:text="Per your request, your change has been Bucketed. This receipt contains the Code linked to your Bucketed funds. Please TREAT THIS CODE AS CASH.  Lost or stolen codes will not be replaced. No cash refunds, except as required by law.  See www.buckettechnologies.com for additional details. Code is issued by Sutton Bank,: Member FDIC."
                    android:textAlignment="center"
                    android:textSize="25px" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>